# Runtime defaults for local dev
# Loaded automatically if a .env file exists.
SERVICE_NAME=user
GRPC_LISTEN_ADDR=:9090
GRPC_ENDPOINT=localhost:9090
HTTP_ADDR=:8080
LOG_LEVEL=info
USER_STORE_BACKEND=memory
STATION_STORE_BACKEND=memory

# OpenTelemetry (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_EXPORTER_OTLP_INSECURE=true

# MongoDB (optional)
MONGO_URI=
MONGO_TIMEOUT=10s
MONGO_DB=lastmile
MONGO_RIDER_COLLECTION=riders
MONGO_DRIVER_COLLECTION=drivers
MONGO_STATION_COLLECTION=stations

# Redis (optional)
REDIS_ADDR=
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TIMEOUT=5s
REDIS_KEY_PREFIX=lastmile
